<title>Editar Produto</title>
<link rel="stylesheet" href="styles.css">
</head>

<body>
  <form class="product-form" action="/produtos/{{produto.id}}/edit" method="post">
    <h1 class="form-title">Edite um produto</h1>
    <div class="form-group">
      <label for="id" class="form-label">Id:</label><br>
      <input type="text" id="id" name="id" class="form-input" value="{{produto.id}}">
    </div>
    <div class="form-group">
      <label for="nome" class="form-label">Nome:</label><br>
      <input type="text" id="nome" name="nome" class="form-input" value="{{produto.nome}}">
    </div>
    <div class="form-group">
      <label for="promocao" class="form-label">Promoção:</label><br>
      <input type="text" id="promocao" name="promocao" class="form-input" value="{{produto.promocao}}">
    </div>
    <div class="form-group">
      <label for="desconto" class="form-label">Desconto:</label><br>
      <input type="text" id="desconto" name="desconto" class="form-input" value="{{produto.desconto}}">
    </div>
    <div class="form-group">
      <label for="preco" class="form-label">Preço:</label><br>
      <input type="text" id="preco" name="preco" class="form-input" value="{{produto.preco}}">
    </div>
    <div class="form-group">
      <label for="valorPromocao" class="form-label">Valor promocional:</label><br>
      <input type="text" id="valorPromocao" name="valorPromocao" class="form-input" value="{{produto.valorPromocao}}">
    </div>
    <div class="form-group">
      <input type="submit" class="form-button" value="Atualizar">
    </div>
  </form>
</body>

</html>